{
  "manifest_version": 3,
  "name": "Unofficial Bricklink Seller Tool",
  "description": "A tool that enhances the order detail page for Bricklink sellers.",
  "version": "1.0.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "extensionIcon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.bricklink.com/orderDetail.asp?ID=*"],
      "js": ["Content.js"]
    },
    {
      "matches": ["https://www.bricklink.com/v3/myCollection/*"],
      "js": ["CollectionTools.js"]
    }
  ]
}
